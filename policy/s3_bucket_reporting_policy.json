{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowRootandHomeListingOfS3Bucket",
            "Effect": "Allow",
            "Principal": {
                "AWS": [
                    "arn:aws:iam::513136617286:root",
                "arn:aws:iam::513136617286:role/EchoRole"
                ]
            },
            "Action": "s3:GetBucketAcl",
            "Resource": "arn:aws:s3:::digital-reporting-system-dev"
        },
        {
            "Sid": "AllowRootandHomeListingOfS3Bucket",
            "Effect": "Allow",
            "Principal": {
                "AWS": [
                    "arn:aws:iam::513136617286:root",
                    "arn:aws:iam::513136617286:role/EchoRole"
                ]
            },
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::digital-reporting-system-dev/*",
            "Condition": {
                "StringEquals": {
                    "s3:x-amz-acl": "bucket-owner-full-control"
                }
            }
        }
    ]
}